<%- include('partials/header') %>
<div class="container">

    <div style="width:30%; margin: 75px auto">
        <h1 style="text-align:center">Edit</h1>
        <form action="/phonebook/>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="contact[name]" value="" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="date" name="contact[date]" value="">
            </div>
            <div class="input-group mb-3">
                <input type="number" class="form-control"  pattern="[1-9]{1}[0-9]{9}" value=""  name="contact[number][0]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form4" style="display:none"><i class="fa fa-plus" ></i></span></span>
                </div>
            </div>
            <div class="input-group mb-3" id="phone_del">
                <input type="number" class="form-control" id="pnumb2" pattern="[1-9]{1}[0-9]{9}" value=""  name="contact[number][1]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form3"><i class="fa fa-trash"></i></span></span>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="email" class="form-control" id="email"  value=""  name="contact[email][0]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form5" style="display:none"><i class="fa fa-plus" ></i></span></span>
                </div>
            </div>
            <div class="input-group mb-3" id="email_del">
                <input type="number" class="form-control" id="email2"  value=""  name="contact[email][1]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form6"> <i class="fa fa-trash"></i></span></span>
                </div>
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Save</button>
            </div>
        </form>
        <a href="/phonebook">Go Back</a>
    </div>
</div>
<%- include('partials/footer') %>