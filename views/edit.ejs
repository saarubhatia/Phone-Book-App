<%- include('partials/header') %>
<div class="container">

    <div style="width:40%; margin: 75px auto">
        <h1 style="text-align:center">Edit</h1>
        <form action="/phonebook/<%=contact._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="contact[name]" value="<%=contact.name%>" placeholder="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="date" name="contact[date]" value="<%=moment(contact.date).format('YYYY-MM-DD'); %>">
            </div>
            <div class="input-group mb-3">
                <input type="number" class="form-control" id="pnumb1"  value="<%=contact.number[0]%>" onkeyPress="if(this.value.length==10) return false;" placeholder="98XXXXXXXX"  name="contact[number][0]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form4" style="display:none"><i class="fa fa-plus" ></i></span></span>
                </div>
            </div>
           
            <div class="input-group mb-3" id="phone_del">
                <input type="number" class="form-control" id="pnumb2" value="<%=contact.number[1]%>" onkeyPress="if(this.value.length==10) return false;" placeholder="98XXXXXXXX" name="contact[number][1]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form3"><i class="fa fa-trash"></i></span></span>
                </div>
            </div>
           
            <div class="input-group mb-3">
                <input type="email" class="form-control" id="email"  value="<%=contact.email[0]%>" placeholder="abc@gmail.com"  name="contact[email][0]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form5" style="display:none"><i class="fa fa-plus" ></i></span></span>
                </div>
            </div>
            
            <div class="input-group mb-3" id="email_del">
                <input type="email" class="form-control" id="email2"  value="<%=contact.email[1]%>" placeholder="abc@gmail.com" name="contact[email][1]">
                <div class="input-group-append">
                  <span class="input-group-text" id="toggle-form6"> <i class="fa fa-trash"></i></span></span>
                </div>
            </div>
            

            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Save</button>
            </div>
        </form>
        <a href="/phonebook">Go Back</a>
    </div>
</div>
<%- include('partials/footer') %>